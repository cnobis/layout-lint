{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "layout_lint",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "rule"
      }
    },
    "rule": {
      "type": "SEQ",
      "members": [
        {
          "type": "FIELD",
          "name": "element",
          "content": {
            "type": "SYMBOL",
            "name": "identifier"
          }
        },
        {
          "type": "FIELD",
          "name": "relation",
          "content": {
            "type": "SYMBOL",
            "name": "relation"
          }
        },
        {
          "type": "FIELD",
          "name": "target",
          "content": {
            "type": "SYMBOL",
            "name": "identifier"
          }
        },
        {
          "type": "FIELD",
          "name": "distance",
          "content": {
            "type": "SYMBOL",
            "name": "distance"
          }
        }
      ]
    },
    "relation": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "below"
        },
        {
          "type": "STRING",
          "value": "above"
        },
        {
          "type": "STRING",
          "value": "left_of"
        },
        {
          "type": "STRING",
          "value": "right_of"
        }
      ]
    },
    "identifier": {
      "type": "PATTERN",
      "value": "[a-zA-Z_][a-zA-Z0-9_]*"
    },
    "distance": {
      "type": "PATTERN",
      "value": "\\d+px"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}